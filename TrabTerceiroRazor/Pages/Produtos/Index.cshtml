        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProPreco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProCategoriaNavigation.CatNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProFornecedorNavigation.ForNome)
            </td>
