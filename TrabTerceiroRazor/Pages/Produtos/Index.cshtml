    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].ProNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].ProPreco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].ProCategoriaNavigation)
            </th>
